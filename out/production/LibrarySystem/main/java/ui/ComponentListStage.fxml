<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.action.WelcomeScreenAction">
    <Button fx:id="addProductButton" layoutX="10.0" layoutY="160.0" prefHeight="31.0" prefWidth="100.0" text="Add product" />
    <Button fx:id="reserve" layoutX="10.0" layoutY="100.0" prefHeight="31.0" prefWidth="100.0" text="Reserve" />
    <Button fx:id="exit" layoutX="10.0" layoutY="660.0" prefHeight="31.0" prefWidth="100.0" text="Exit" />
    <Button fx:id="borrow" layoutX="10.0" layoutY="40.0" prefHeight="31.0" prefWidth="100.0" text="Borrow" />
    <Button fx:id="search" layoutX="1180.0" layoutY="10.0" text="Search" />
    <TextField fx:id="productName" layoutX="1000.0" layoutY="10.0" />

    <Label fx:id="bookInventoryString" layoutX="120" layoutY="10" text="Book Inventory" textFill="brown">
        <font>
            <Font size="18" />
        </font>
    </Label>
    <Label fx:id="journeyInventoryString" layoutX="120" layoutY="10" text="Journey Inventory" textFill="brown">
        <font>
            <Font size="18" />
        </font>
    </Label>

    <TableView fx:id="table" layoutX="120.0" layoutY="40" prefHeight="650.0" prefWidth="1125.0">
        <columns>
            <TableColumn fx:id="title" prefWidth="125.0" text="Title" />
            <TableColumn fx:id="author" prefWidth="125.0" text="Author" />
            <TableColumn fx:id="pageCount" prefWidth="125.0" text="Page" />
            <TableColumn fx:id="language" prefWidth="125.0" text="Language" />
            <TableColumn fx:id="publisher" prefWidth="125.0" text="Publisher" />
            <TableColumn fx:id="publishDate" prefWidth="125.0" text="Publish Date" />
            <TableColumn fx:id="place" prefWidth="125.0" text="Place" />
            <TableColumn fx:id="kategoriIsim" prefWidth="125.0" text="Category" />
            <TableColumn fx:id="status" prefWidth="125.0" text="Status" />
        </columns>
    </TableView>
    <Line endX="110.0" layoutX="0.0" layoutY="220.0" startX="10.0" />
    <Label fx:id="productTypeString" layoutX="10" layoutY="240" text="Product Type:" />
   <RadioButton fx:id="book" layoutX="10.0" layoutY="270.0" mnemonicParsing="false" text="Book" />
    <RadioButton fx:id="journal" layoutX="10.0" layoutY="310.0" mnemonicParsing="false" text="Journal" />
    <Line endX="110.0" layoutX="0.0" layoutY="350.0" startX="10.0" />
   <Button fx:id="logoff" layoutX="10.0" layoutY="620.0" prefHeight="31.0" prefWidth="100.0" text="Log off" />

</AnchorPane>
